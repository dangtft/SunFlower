@{
    Layout = "_AdminLayout";
}
@model WebSunFlower.ViewModel.BlogViewModel
<div class="content-page">
    <div class="content">

        <!-- Start container-fluid -->
        <div style="margin-left:50px;" class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div>
                        <h4 class="header-title mb-3">Welcome !</h4>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box">
                        <h5 class="mt-0 font-14 mb-3">Blogs</h5>
                        <div class="table-responsive">
                            <table class="table table-hover mails m-0 table table-actions-bar table-centered">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Image</th>
                                        <th>Title</th>
                                        <th></th>
                                         <th><a class="btn btn-primary" asp-controller="Admin" asp-action="AddBlog">Add Blog</a></th>
                                        <th></th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model.Blogs)
                                    {
                                        <tr>
                                            <td>
                                                @item.BlogId
                                            </td>

                                            <td>
                                                @item.ImgUrl
                                            </td>

                                            <td>
                                                @item.Title
                                            </td>
                                            <td><a href="@Url.Action("BlogDetails", "Admin", new { id = item.BlogId })">Detail</a></td>
                                            <td><a asp-controller="Admin" asp-action="DeleteBlog" asp-route-id="@item.BlogId">Delete</a></td>
                                            <td><a asp-controller ="Admin" asp-action="EditBlog" asp-route-id="@item.BlogId">Edit</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end row -->

        </div>
        <!-- end container-fluid -->


    </div>
    <!-- end content -->

</div>
