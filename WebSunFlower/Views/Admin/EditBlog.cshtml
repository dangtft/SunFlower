@model WebSunFlower.Models.Blog

@{
    Layout = "_AdminLayout";
}

<div class="content-page">
    <div class="content">
        <!-- Start container-fluid -->
        <div style="margin-left:50px;" class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <h4 class="header-title mb-3">Edit Blog</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box">
                        <form asp-action="EditBlog" method="post">
                            <input type="hidden" asp-for="BlogId" />

                            <div class="form-group">
                                <label asp-for="ImgUrl" class="control-label">Image URL</label>
                                <input asp-for="ImgUrl" class="form-control" />
                                <span asp-validation-for="ImgUrl" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Title" class="control-label">Title</label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Content" class="control-label">Content</label>
                                <textarea asp-for="Content" class="form-control">@Model.Content</textarea>
                                <span asp-validation-for="Content" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ContentDetail" class="control-label">Content Detail</label>
                                <textarea asp-for="ContentDetail" class="form-control">@Model.ContentDetail</textarea>
                                <span asp-validation-for="ContentDetail" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Author" class="control-label">Author</label>
                                <input asp-for="Author" class="form-control" />
                                <span asp-validation-for="Author" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="IsHot" class="control-label">Is Hot</label>
                                <input asp-for="IsHot" type="checkbox" />
                                <span asp-validation-for="IsHot" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Save Changes</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- end container-fluid -->
    </div>
    <!-- end content -->
</div>
