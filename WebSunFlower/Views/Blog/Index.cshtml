@{
}
@model WebSunFlower.ViewModel.BlogViewModel
<div class="ab-slider">
    <img src="/assets/images/slider/2-2.jpg">
</div>
<div id="ab-slider" class="breadcrumbs-area position-relative">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <div class="breadcrumb-content position-relative section-content">
                    <h3 class="title-3">Blog</h3>
                    <ul>
                        <li><a asp-controller="Product" asp-action="Index">Home</a></li>
                        <i class="fa-solid fa-chevron-up fa-rotate-90"></i>
                        <li>Blog</li>
                    </ul>
                    <form  method="get">
                        <input style="border:solid 0.5px #E72463" type="text" name="blogName" placeholder="Search Blog" />
                        <button type="submit" style="background-color :#E72463;border:none;color:#fff">Search</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="blog-main-area">
    <div class="container container-default custom-area">
        <div class="row">
            <div class="col-12 col-custom widget-mt">
                <!-- Shop Wrapper Start -->
                <div class="row">
                    @foreach(var item in Model.Blogs)
                    {
                        <div class="col-12 col-custom mb-30">
                            <div class="blog-lst">
                                <div class="single-blog">
                                    <div class="blog-image">
                                        <a class="d-block" asp-controller="Blog" asp-action="Detail" asp-route-bBlogId="@item.BlogId">
                                            <img src="@item.ImgUrl" alt="Blog Image" class="w-100">
                                        </a>
                                    </div>
                                    <div class="blog-content">
                                        <div class="blog-text">
                                            <h4><a asp-controller="Blog" asp-action="Detail" asp-route-bBlogId="@item.BlogId">@item.Title</a></h4>
                                            <div class="blog-post-info">
                                                <span><a asp-controller="Blog" asp-action="Detail" asp-route-bBlogId="@item.BlogId">By @item.Author</a></span>
                                                <span>@item.CreatedAt.ToString("dd/MM/yyyy")</span>
                                            </div>
                                            <p>Lorem ipsu dolor sit amet cons elits cumque adipisicing, sed do incid eiusmod tempor ut labore et dolore eveniet .</p>
                                            <a asp-controller="Blog" asp-action="Detail" asp-route-bBlogId="@item.BlogId" class="readmore">Read More <i class="fa fa-long-arrow-right"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>
                <!-- Shop Wrapper End -->

            </div>
        </div>
    </div>
</div>