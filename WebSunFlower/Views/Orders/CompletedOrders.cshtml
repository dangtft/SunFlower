@{
}
@model IEnumerable<WebSunFlower.Models.Order>
<div class="ab-slider">
    <img src="~/assets/images/slider/2-2.jpg">
</div>
<section>
    <div id="ab-slider" class="breadcrumbs-area position-relative">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <div class="breadcrumb-content position-relative section-content">
                        <h3 class="title-3">All Order</h3>
                        <ul class="title">
                            <li><a asp-controller="Product" asp-action="Index">Home</a></li>
                            <i class="fa-solid fa-chevron-up fa-rotate-90"></i>
                            <li>All Order</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@if (Model.Any())
{
    <div class="justify-content-center align-content-center">
        <table style="margin:0px 0px 50px 100px;width:90%;" class="table ">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Name</th>
                    <th>Product</th>
                    <th>Order Total</th>
                    <th>Address</th>
                    <th>Order Time</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.FirstName</td>
                        <td>
                            @foreach (var orderDetail in order.OrderDetails)
                            {
                                <div>
                                    <img src="@orderDetail.Product?.ImageUrl" alt="Product Image" style="width:50px;height:50px;" />
                                    @orderDetail.Product?.Name   x   @orderDetail.Product?.Price.ToString("C")
                                </div>
                            }
                        </td>
                        <td>@order.OrderTotal.ToString("C")</td>
                        <td>@order.Address</td>
                        <td>@order.OrderPlaced.ToString("yyyy-MM-dd HH:mm:ss")</td>
                       
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
}
else
{
    <p>No completed orders.</p>
}


